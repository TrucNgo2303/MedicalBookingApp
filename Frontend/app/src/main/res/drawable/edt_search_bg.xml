<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp bóng đổ (đặt dưới nền) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Màu bóng với opacity 25% -->
            <corners android:radius="8dp" /> <!-- Bo góc (nếu cần) -->
        </shape>
    </item>

    <!-- Lớp nền chính của EditText -->
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Màu nền -->
            <corners android:radius="8dp" /> <!-- Bo góc -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Viền EditText -->
        </shape>
    </item>
</layer-list>