<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.patients.SpecialistDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/back_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Chuyên khoa"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cv_action_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingBottom="108dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_specialist_card"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="16dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue_appointment"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imv_specialist_icon"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@drawable/default_avatar"
                            android:layout_margin="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_specialist_name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/imv_specialist_icon"
                            app:layout_constraintRight_toRightOf="parent"
                            android:text="CHUYÊN KHOA"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_specialist_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_specialist_name_title"
                            app:layout_constraintLeft_toRightOf="@id/imv_specialist_icon"
                            app:layout_constraintRight_toRightOf="parent"
                            android:text="Ngoại khoa tổng quát"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_summary"
                            android:layout_width="230dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_specialist_name"
                            app:layout_constraintLeft_toRightOf="@id/imv_specialist_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="adadghajywfvdyjawvdajhwdvawhjdjwhvdajhwgvdajwadahdvawjghdvajhwdvdvjawhdvawhj"
                            android:textStyle="italic"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:singleLine="false"
                            android:breakStrategy="simple"
                            android:gravity="center"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_fee_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_summary"
                            app:layout_constraintLeft_toRightOf="@id/imv_specialist_icon"
                            android:text="Giá niêm yết:"
                            android:textStyle="italic"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="16dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/tv_fee_title"
                            app:layout_constraintBottom_toBottomOf="@id/tv_fee_title"
                            app:layout_constraintLeft_toRightOf="@id/tv_fee_title"
                            android:text="200.000 VNĐ"
                            android:textStyle="italic"
                            android:textSize="16sp"
                            android:textColor="@color/orange"
                            android:layout_marginStart="8dp"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/cv_specialist_card"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@color/black"
                    android:layout_margin="16dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/v_line"
                    android:layout_marginTop="16dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>