<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.doctors.DoctorHomeFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fitsSystemWindows="true"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imv_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/default_avatar"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/user_notification"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/imv_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Xin chào,"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toEndOf="@id/tv_hello"
                    app:layout_constraintBottom_toBottomOf="@id/tv_hello"
                    android:layout_marginStart="8dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="48dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_hello"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:hint="Tìm kiếm bệnh nhân"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/edt_search_bg"
                    android:clickable="true"
                    android:focusable="true"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_search"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toTopOf="@id/tv_search"
                    app:layout_constraintBottom_toBottomOf="@id/tv_search"
                    app:layout_constraintLeft_toLeftOf="@id/tv_search"
                    android:src="@drawable/search_icon"
                    android:layout_marginLeft="8dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_number_appointment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_search"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Số lượng lịch khám hôm nay"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_number_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_number_appointment_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="100"
                    android:textSize="32sp"
                    android:textColor="@color/blue_medium"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    />
                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_number_appointment"
                    android:background="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_appointment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/v_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Lịch khám hôm nay"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_appointment_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_appointment_title"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/rcv_appointment_today"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>