<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.patients.DoctorDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/back_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Bác sĩ"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_action_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:clipToPadding="false"
            android:paddingBottom="108dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_avatar"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:cardCornerRadius="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imv_avatar_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/doctor_detail"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_doctor_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cv_avatar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_doctor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Dr. Nguyen Van A"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_doctor_qualification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_doctor_name"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginStart="8dp"
                            android:text="Bác sĩ ngoại khoa II"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_number_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:text="(96 đánh giá)"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/tv_number_review"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginEnd="4dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:layout_constraintTop_toTopOf="@id/tv_rating"
                            app:layout_constraintBottom_toBottomOf="@id/tv_rating"
                            app:layout_constraintRight_toLeftOf="@id/tv_rating"
                            android:src="@drawable/star_icon"
                            android:layout_marginEnd="4dp"
                            />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imv_dr_patients"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_doctor_qualification"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@drawable/dr_patients"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="32dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_patients_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/imv_dr_patients"
                            app:layout_constraintLeft_toLeftOf="@id/imv_dr_patients"
                            app:layout_constraintRight_toRightOf="@id/imv_dr_patients"
                            android:text="116+"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_patient_title_dr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_patients_number"
                            app:layout_constraintLeft_toLeftOf="@id/tv_patients_number"
                            app:layout_constraintRight_toRightOf="@id/tv_patients_number"
                            android:text="Bệnh nhân"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imv_dr_experience"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_doctor_qualification"
                            app:layout_constraintLeft_toRightOf="@id/imv_dr_patients"
                            android:src="@drawable/dr_experience"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="60dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_experience_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/imv_dr_experience"
                            app:layout_constraintLeft_toLeftOf="@id/imv_dr_experience"
                            app:layout_constraintRight_toRightOf="@id/imv_dr_experience"
                            android:text="3+"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_experience_number"
                            app:layout_constraintLeft_toLeftOf="@id/tv_experience_number"
                            app:layout_constraintRight_toRightOf="@id/tv_experience_number"
                            android:text="Năm"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imv_dr_rating"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_doctor_qualification"
                            app:layout_constraintLeft_toRightOf="@id/imv_dr_experience"
                            android:src="@drawable/dr_rating"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="60dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_rating_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/imv_dr_rating"
                            app:layout_constraintLeft_toLeftOf="@id/imv_dr_rating"
                            app:layout_constraintRight_toRightOf="@id/imv_dr_rating"
                            android:text="4.5"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_rating_number"
                            app:layout_constraintLeft_toLeftOf="@id/tv_rating_number"
                            app:layout_constraintRight_toRightOf="@id/tv_rating_number"
                            android:text="Xếp hạng"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imv_dr_reviews"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_doctor_qualification"
                            app:layout_constraintLeft_toRightOf="@id/imv_dr_rating"
                            android:src="@drawable/dr_reviews"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="60dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_reviews_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/imv_dr_reviews"
                            app:layout_constraintLeft_toLeftOf="@id/imv_dr_reviews"
                            app:layout_constraintRight_toRightOf="@id/imv_dr_reviews"
                            android:text="90+"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_reviews_number"
                            app:layout_constraintLeft_toLeftOf="@id/tv_reviews_number"
                            app:layout_constraintRight_toRightOf="@id/tv_reviews_number"
                            android:text="Đánh giá"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_about_me_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_patient_title_dr"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Giới thiệu về bác sĩ"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_about_me"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_about_me_title"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:text="@string/about_me_default"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_comment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_about_me"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Đánh giá"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="8dp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_comments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_comment_title"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btn_book_appointment"
            android:text="Đặt lịch khám bệnh"
            android:textColor="@color/white"
            android:layout_margin="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>