<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edt_search_bg"
            android:paddingBottom="8dp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_medicine_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Tên thuốc: "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_medicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_medicine_title"
                app:layout_constraintStart_toStartOf="@id/tv_medicine_title"
                app:layout_constraintEnd_toStartOf="@id/edt_quantity"
                android:text="ABC "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="4dp"
                android:text="Số lượng viên thuốc"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_quantity"
                app:layout_constraintStart_toStartOf="@id/tv_quantity"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="500 mg, 1 viên"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pills_per_day_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/edt_medicine"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Số lượng viên/ngày: "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_pills_per_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_pills_per_day_title"
                app:layout_constraintStart_toStartOf="@id/tv_pills_per_day_title"
                app:layout_constraintEnd_toStartOf="@id/tv_doses_per_day"
                android:text="ABC "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_doses_per_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/edt_quantity"
                app:layout_constraintStart_toStartOf="@id/edt_quantity"
                android:layout_marginEnd="128dp"
                android:layout_marginTop="4dp"
                android:text="Thời gian sử dụng"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_doses_per_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_doses_per_day"
                app:layout_constraintStart_toStartOf="@id/tv_doses_per_day"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="1 Sáng , 1 Tối"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_change"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/edt_doses_per_day"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/btn_book_appointment"
                android:text="Thay đổi"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/edt_doses_per_day"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/btn_cancel"
                android:text="Xóa"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="24dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>