<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.doctors.PreliminaryFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/back_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Chẩn đoán và đơn thuốc"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_action_bar"
            android:clipToPadding="false"
            android:paddingBottom="108dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_preliminary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Chẩn đoán sơ bộ"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="16dp"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_preliminary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_preliminary_title"
                    app:layout_constraintLeft_toLeftOf="@id/tv_preliminary_title"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="Không có"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_conclusions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/edt_preliminary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Kết luận bệnh"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="16dp"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_conclusions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_conclusions_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="Không có"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_recommendations_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/edt_conclusions"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Hướng dẫn điều trị bệnh"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="16dp"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_recommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_recommendations_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="Không có"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_update_preliminary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/edt_recommendations"
                    android:background="@drawable/btn_reschedule"
                    android:layout_margin="8dp"
                    android:text="Cập nhật"
                    android:textColor="@color/white"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_prescription_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btn_update_preliminary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Đơn thuốc"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="16dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_prescription"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="@id/tv_prescription_title"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="+"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_add_prescription"
                    android:layout_marginEnd="16dp"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_add_medicine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btn_add_prescription"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp"
                    android:visibility="gone"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue_medium"
                        android:paddingBottom="12dp"
                        >
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_medicine_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:hint="Tên đơn thuốc"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_dosage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/edt_medicine_name"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:hint="Số lượng viên thuốc"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_usage_instruction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/edt_dosage"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:hint="Số lượng dùng 1 ngày"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/edt_usage_instruction"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:hint="Thời gian dùng"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"
                            android:layout_marginTop="8dp"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_add"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            app:layout_constraintTop_toBottomOf="@id/edt_duration"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:text="Thêm đơn thuốc"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:background="@drawable/btn_add_prescription"
                            android:layout_marginTop="8dp"
                            android:padding="4dp"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_prescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cv_add_medicine"
                    android:layout_marginTop="8dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>